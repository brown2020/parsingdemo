rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * This app keys user data by Clerk userId (not necessarily Firebase auth uid).
     * Depending on your Clerk->Firebase integration, the Clerk user id may appear as:
     * - request.auth.uid
     * - request.auth.token.sub
     * - request.auth.token.user_id
     * - request.auth.token.clerk_id / clerkUserId
     *
     * Adjust these if your token uses different claim names.
     */
    function isOwner(userId) {
      return isSignedIn() && (
        request.auth.uid == userId ||
        request.auth.token.sub == userId ||
        request.auth.token.user_id == userId ||
        request.auth.token.clerk_id == userId ||
        request.auth.token.clerkUserId == userId
      );
    }

    // Deny by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // User-scoped data.
    match /users/{userId} {
      allow read, create, update, delete: if isOwner(userId);

      // Documents uploaded/converted by the user.
      match /documents/{docId} {
        allow read, create, update, delete: if isOwner(userId);
      }

      // Payment records under the user.
      match /payments/{paymentId} {
        allow read, create, update, delete: if isOwner(userId);
      }

      // Profile doc(s) under the user.
      match /profile/{profileId} {
        allow read, create, update, delete: if isOwner(userId);
      }
    }
  }
}

